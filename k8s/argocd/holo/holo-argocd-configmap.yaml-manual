apiVersion: v1
kind: ConfigMap
metadata:
  name: argocd-cm
  namespace: argocd
  labels:
    app.kubernetes.io/name: argocd-cm
    app.kubernetes.io/part-of: argocd
data:
  url: https://holo-argocd.morrislan.net
  oidc.config: |
    name: MorrisLAN SSO
    issuer: https://auth.morrislan.net/application/o/holo-argocd/
    clientID: $oidc.morrislansso.clientID
    clientSecret: $oidc.morrislansso.clientSecret
    requestedScopes: ["openid", "profile", "email", "groups"]