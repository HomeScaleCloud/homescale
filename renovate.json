{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    }
  ],
  "argocd": {
    "fileMatch": ["apps/.+-argocd\\.yaml$"]
  },
  "terraform": {
    "fileMatch": ["infra/tofu/.*\\.tf$"]
  },
  "kubernetes": {
    "fileMatch": ["apps/.*\\.yaml$"]
  },
  "githubActions": {
    "fileMatch": [".gitea/workflows/.*\\.yaml$"]
  }
}
